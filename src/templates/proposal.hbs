<!DOCTYPE html>
<html>

<head>
    <style>
        {
                {
                    {
                    brandCSS
                }
            }
        }

        body {
            font-family: var(--font-primary), sans-serif;
            line-height: 1.6;
            padding: 50px;
            max-width: 800px;
            margin: 0 auto;
        }

        header {
            text-align: center;
            margin-bottom: 40px;
        }

        .logo {
            max-height: 100px;
        }

        h1 {
            color: var(--primary-color);
            font-size: 2.5em;
            margin-bottom: 10px;
        }

        h2 {
            color: var(--primary-color);
            margin-top: 30px;
        }

        .section {
            margin-bottom: 20px;
            padding: 20px;
            background: #fff;
            border-left: 5px solid var(--accent-color);
        }

        .pricing-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .pricing-table th,
        .pricing-table td {
            padding: 12px;
            border: 1px solid #ddd;
        }

        .pricing-table th {
            background: var(--secondary-color);
            color: #fff;
        }
    </style>
</head>

<body>

    <header>
        {{#if brandKit.logo}}
        <img src="{{brandKit.logo}}" class="logo" />
        {{/if}}
        <h1>{{content.title}}</h1>
        <p><strong>Prepared for:</strong> {{content.preparedFor}} | <strong>Prepared by:</strong> {{content.preparedBy}}</p>
    </header>

    {{#if content.executiveSummary}}
    <section class="section">
        <h2>Executive Summary</h2>
        <p>{{content.executiveSummary}}</p>
    </section>
    {{/if}}

    {{#if content.currentChallenges}}
    <section>
        <h2>Current Challenges</h2>
        <ul>
            {{#each content.currentChallenges}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </section>
    {{/if}}

    {{#if content.proposedSolution}}
    <section>
        <h2>Proposed Solution</h2>
        <p>{{content.proposedSolution.overview}}</p>
        
        <h3>Core Modules</h3>
        <ul>
            {{#each content.proposedSolution.coreModules}}
            <li>{{this}}</li>
            {{/each}}
        </ul>

        {{#if content.proposedSolution.optionalEnhancements}}
        <h3>Optional Enhancements</h3>
        <ul>
            {{#each content.proposedSolution.optionalEnhancements}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        {{/if}}
    </section>
    {{/if}}

    {{#if content.implementationApproach}}
    <section>
        <h2>Implementation Approach</h2>
        <table class="pricing-table">
            <tr>
                <th>Phase</th>
                <th>Description</th>
            </tr>
            {{#each content.implementationApproach}}
            <tr>
                <td><strong>{{this.phase}}</strong></td>
                <td>{{this.description}}</td>
            </tr>
            {{/each}}
        </table>
    </section>
    {{/if}}

    {{#if content.deliverables}}
    <section>
        <h2>Deliverables</h2>
        <ul>
            {{#each content.deliverables}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </section>
    {{/if}}

    {{#if content.expectedOutcomes}}
    <section>
        <h2>Expected Outcomes</h2>
        <ul>
            {{#each content.expectedOutcomes}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </section>
    {{/if}}

    {{#if content.assumptions}}
    <section>
        <h2>Assumptions</h2>
        <ul>
            {{#each content.assumptions}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </section>
    {{/if}}

    {{#if content.conclusion}}
    <section>
        <h2>Conclusion</h2>
        <p>{{content.conclusion}}</p>
    </section>
    {{/if}}

</body>

</html>